<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC
	"-//Apache Software Foundation//DTD Tiles Configuration 2.1//EN"
	"http://tiles.apache.org/dtds/tiles-config_2_1.dtd">

<tiles-definitions>

	<definition name="massupdate/show" extends="defaultHeaderAndFooterLayout">
		<put-attribute name="title" value="global.mass_updates" />
		<put-attribute name="form_id" value="massupdate_show" />
		<put-attribute name="form_model" value="memBean" />
		<put-attribute name="form_method" value="post" />
		<put-list-attribute name="contents">
			<add-attribute value="/jsp/MassUpdate/Manage.jsp" />
		</put-list-attribute>
	</definition>
	
	<definition name="massupdate/prepareForMassUpdate" extends="defaultHeaderAndFooterLayout">
		<put-attribute name="title" value="global.mass_updates" />
		<put-attribute name="form_id" value="massupdate_show" />
		<put-attribute name="form_model" value="memBean" />
		<put-attribute name="form_method" value="post" />
		<put-list-attribute name="contents">
			<add-attribute value="/jsp/MassUpdate/MassUpdate.jsp" />
			<add-attribute value="/jsp/MassUpdate/Advices.jsp" />
		</put-list-attribute>
	</definition>

</tiles-definitions>
